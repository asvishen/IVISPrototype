<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/speakButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:background="@drawable/mic"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/plusbutton"
            android:background="@drawable/tempminus"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:onClick="minusCalled"/>



        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="50dp"
            android:text="70"
            android:layout_marginLeft="200dp"
            android:width="100dp"
            android:height="100dp"
            android:textSize="60dp"
            android:id="@+id/textViewTemperature" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textSize="60dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="F"
            android:id="@+id/textView2" />



        <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/minusbutton"
            android:background="@drawable/tempplus"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="200dp"
            android:onClick="plusCalled"/>




    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="45dp">

        <RadioGroup android:id="@+id/toggleGroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <ToggleButton
                android:id="@+id/togglebutton"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:textOn=""
                android:textOff=""
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:onClick="onToggle"
                android:background="@drawable/check"
                />
            <ToggleButton
                android:id="@+id/togglebutton2"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_marginLeft="30dp"
                android:textOn=""
                android:textOff=""
                android:focusable="false"
                android:onClick="onToggle"
                android:enabled="true"
                android:focusableInTouchMode="false"
                android:background="@drawable/check2"/>
            <ToggleButton
                android:id="@+id/togglebutton3"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_marginLeft="30dp"
                android:textOn=""
                android:textOff=""
                android:checked="true"
                android:focusable="false"
                android:onClick="onToggle"
                android:enabled="false"
                android:focusableInTouchMode="false"
                android:background="@drawable/check3"/>
            <ToggleButton
                android:id="@+id/togglebutton4"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_marginLeft="30dp"
                android:textOn=""
                android:textOff=""
                android:focusable="false"
                android:onClick="onToggle"
                android:enabled="true"
                android:focusableInTouchMode="false"
                android:background="@drawable/check4"/>
            <ToggleButton
                android:id="@+id/togglebutton5"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_marginLeft="30dp"
                android:textOn=""
                android:textOff=""
                android:focusable="false"
                android:onClick="onToggle"
                android:enabled="true"
                android:focusableInTouchMode="false"
                android:background="@drawable/check5"/>
        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="30dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="1"
            android:id="@+id/txtN1"
            android:layout_marginLeft="180dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="30dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="2"
            android:id="@+id/txtN2"
            android:layout_marginLeft="220dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="30dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="3"
            android:id="@+id/txtN3"
            android:layout_marginLeft="210dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="30dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="4"
            android:id="@+id/txtN4"
            android:layout_marginLeft="220dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="30dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="5"
            android:id="@+id/txtN5"
            android:layout_marginLeft="220dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="45dp">

        <RadioGroup android:id="@+id/toggleGroup2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            >

            <ToggleButton
                android:id="@+id/togglebutton10"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:textOn=""
                android:textOff=""
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:onClick="onToggle"
                android:checked="true"
                android:background="@drawable/check10"/>
            <ToggleButton
                android:id="@+id/togglebutton6"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:textOn=""
                android:textOff=""
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:onClick="onToggle"
                android:background="@drawable/check6"/>
            <ToggleButton
                android:id="@+id/togglebutton7"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_marginLeft="30dp"
                android:textOn=""
                android:textOff=""
                android:focusable="false"
                android:onClick="onToggle"

                android:focusableInTouchMode="false"
                android:background="@drawable/check7"/>
            <ToggleButton
                android:id="@+id/togglebutton8"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_marginLeft="30dp"
                android:textOn=""
                android:textOff=""

                android:focusable="false"
                android:onClick="onToggle"

                android:focusableInTouchMode="false"
                android:background="@drawable/check8"/>
            <ToggleButton
                android:id="@+id/togglebutton9"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_marginLeft="30dp"
                android:textOn=""
                android:textOff=""
                android:focusable="false"
                android:onClick="onToggle"

                android:focusableInTouchMode="false"
                android:background="@drawable/check9"/>

        </RadioGroup>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/homeButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:background="@drawable/homebutton"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

</LinearLayout>